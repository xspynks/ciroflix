<%= render partial: "shared/header" %>

<div id="<%= dom_id video %>">
  <p>
    <strong>Title:</strong>
    <%= video.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= video.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= video.category %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= video.youtube_url %>
  </p>

  <p>
    <strong>YouTube ID:</strong>
    <iframe src='https://youtube.com/embed/<%= @video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
  </p>

  <p>
    <strong>Status:</strong>
    <%= video.active %>
  </p>

   <div class="">
  <% video.pictures.each do |pic| %>
    <% next unless pic.file.present? %>
    <%= image_tag pic.file_url %>
    <%= button_to "Destroy this picture", pic, method: :delete %>
  <% end %>
  </div>

</div>

<%= render partial: "shared/footer" %>