<p style="color: green"><%= notice %></p>

<%= render @video %>

<div>
  <%= link_to "Edit this video", edit_video_path(@video) %> |
  <%= link_to "Back to videos", videos_path %>

  <%= button_to "Destroy this video", @video, method: :delete %>

  <%= simple_form_for(@new_picture) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :file %>
        <%= f.input :picturable_type, as: :hidden %>
        <%= f.input :picturable_id, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
</div>
